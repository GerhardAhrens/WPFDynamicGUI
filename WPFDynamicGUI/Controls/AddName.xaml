<UserControl
    x:Class="WPFDynamicGUI.Controls.AddName"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFDynamicGUI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="270"
    Height="120"
    mc:Ignorable="d">

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Text="Anrede" />
        <TextBox
            x:Name="txtSalutation"
            Grid.Row="0"
            Grid.Column="1"
            Width="140"
            Height="23"
            HorizontalAlignment="Left" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Text="Titel" />
        <TextBox
            x:Name="txtTitle"
            Grid.Row="1"
            Grid.Column="1"
            Width="140"
            Height="23"
            HorizontalAlignment="Left"
            Text="" />

        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Text="Vorname" />
        <TextBox
            x:Name="txtFirstname"
            Grid.Row="2"
            Grid.Column="1"
            Width="140"
            Height="23"
            HorizontalAlignment="Left"
            Text="" />

        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Text="Name/Firma" />

        <TextBox
            x:Name="txtLastname"
            Grid.Row="3"
            Grid.Column="1"
            Width="140"
            Height="23"
            HorizontalAlignment="Left"
            Text="" />
    </Grid>
</UserControl>
