<UserControl
    x:Class="WpfDynamicGUI.Controls.DynamicField"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfDynamicGUI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="30"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/WPFDynamicGUI;component/Resources/Style/FieldDataTemplate.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <local:DataTypeTemplateSelector
                x:Key="MyDTS"
                TypeBool="{StaticResource ResourceKey=dtTypBool}"
                TypeDateTime="{StaticResource ResourceKey=dtTypDateTime}"
                TypeNull="{StaticResource ResourceKey=dtTypNull}"
                TypeString="{StaticResource ResourceKey=dtTypString}" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>

        <ComboBox
            x:Name="cbLabel"
            Grid.Row="0"
            Grid.Column="0" />

        <ContentControl
            x:Name="DataTypeContent"
            Grid.Row="0"
            Grid.Column="1"
            Margin="10,0,0,0"
            VerticalAlignment="Center">
            <ContentControl.ContentTemplateSelector>
                <local:DataTypeTemplateSelector />
            </ContentControl.ContentTemplateSelector>
        </ContentControl>
    </Grid>
</UserControl>
