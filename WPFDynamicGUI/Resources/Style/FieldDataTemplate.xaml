<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <DataTemplate x:Key="dtTypNull">
        <TextBlock VerticalAlignment="Center" Text="Keine Auswahl" />
    </DataTemplate>

    <DataTemplate x:Key="dtTypString">
        <TextBox
            x:Name="txtString"
            Width="200"
            HorizontalAlignment="Left" />
    </DataTemplate>

    <DataTemplate x:Key="dtTypBool">
        <CheckBox Width="50" HorizontalAlignment="Left" />
    </DataTemplate>

    <DataTemplate x:Key="dtTypDateTime">
        <DatePicker Width="110" HorizontalAlignment="Left" />
    </DataTemplate>

</ResourceDictionary>