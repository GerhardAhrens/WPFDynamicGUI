<Window
    x:Class="WpfDynamicGUI.DynamicFieldDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:WpfDynamicGUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfDynamicGUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DynamicFieldDemo"
    Width="500"
    Height="350"
    MinWidth="500"
    MinHeight="350"
    MaxWidth="550"
    MaxHeight="350"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Controls:DynamicField ItemSource="{Binding Path=LabelContent, UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</Window>
